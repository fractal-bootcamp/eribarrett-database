generator client {
  provider = "prisma-client-js"
  previewFeatures = ["typedSql"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book{
  id Int  @id @default(autoincrement())
  title String
  author Author @relation(fields: [authorId], references: [id])
  authorId Int
  isbn String
  genres BookGenres[]
  rented Boolean
 
  //rented??? If member has book , mark true aka Not Available
}

model Author{
  id Int  @id @default(autoincrement())
  name String
  bio String
  books Book[]
}

model Genre{
  id Int  @id @default(autoincrement())
  name String
  books BookGenres[]
}

model Member{
  id Int  @id @default(autoincrement())
  name String
  email String
  address String
}

model BookGenres{
  id Int  @id @default(autoincrement())
  genre Genre @relation(fields: [genreId], references: [id])
  genreId Int
  book Book[]
}

